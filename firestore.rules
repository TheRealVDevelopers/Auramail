rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ✅ USERNAMES COLLECTION (used for checking username availability)
    match /usernames/{username} {
      // Allow unauthenticated reads for username availability checks
      allow read: if true;
      
      // Allow creating a username record only for themselves
      allow create: if request.auth != null
                    && request.resource.data.uid == request.auth.uid;

      // Prevent updates and deletes (usernames should be immutable)
      allow update, delete: if false;
    }

    // ✅ USERS COLLECTION (main user profiles)
    match /users/{userId} {
      // Allow reading all profiles for messaging lookups
      allow read: if request.auth != null;

      // Allow creating user profile if logged in, and userId == their auth UID
      allow create: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.data.uid == request.auth.uid;

      // Allow users to update only their own profile
      allow update: if request.auth != null && request.auth.uid == userId;

      // Prevent profile deletion for safety
      allow delete: if false;

      // ✅ EMAILS SUBCOLLECTION
      match /emails/{emailId} {
        // Allow reading and modifying only own emails
        allow read, update, delete: if request.auth != null && request.auth.uid == userId;

        // Allow creating emails only in their own user folder
        allow create: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ✅ Public lookup of users for email delivery
    match /users/{document=**} {
      allow list, get: if request.auth != null;
    }
  }
}
